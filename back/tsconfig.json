        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2016",
        "strict": true,
        "esModuleInterop": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
