{
    "compilerOptions":{
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2016",
        "lib": ["ES2015", "ES2016"],
        "strict": true,
        "esModuleInterop": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strictPropertyInitialization": false, 
    },
    "include": ["src/**/*.ts", "src/repositories/user"],
    "exclude": ["node_modules"],
    "files": ["./src/index.ts"]
}